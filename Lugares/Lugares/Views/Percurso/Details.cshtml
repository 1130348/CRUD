@model ClassLibrary.Model.Percurso

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Percurso</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.POIs)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dd>
            <table class="table">
                <tr>
                    <th>POI</th>
                </tr>
                @foreach(var item in Model.POIs)
                {
                    <tr>
                        <td>
                            @Html.DisplayNameFor(modelItem => item.Nome)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PercursoID }) |
